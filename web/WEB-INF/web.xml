<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>WebJava</servlet-name>
        <servlet-class>br.edu.ifmt.java.main.WebJava</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessarNotas</servlet-name>
        <servlet-class>br.edu.ifmt.java.main.ProcessarNotas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarLivros</servlet-name>
        <servlet-class>br.edu.ifmt.java.main.ListarLivros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObraDeArteServlet</servlet-name>
        <servlet-class>br.edu.ifmt.java.main.ObraDeArteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebJava</servlet-name>
        <url-pattern>/WebJava</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessarNotas</servlet-name>
        <url-pattern>/ProcessarNotas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarLivros</servlet-name>
        <url-pattern>/ListarLivros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObraDeArteServlet</servlet-name>
        <url-pattern>/ObraDeArteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
